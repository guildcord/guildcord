{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2019",
        "strict": true,
        "outDir": "lib",
        "pretty": true,
        "strictNullChecks": true,
        "declaration": true,
        "noUnusedLocals": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/**/*.ts"
    ]
}